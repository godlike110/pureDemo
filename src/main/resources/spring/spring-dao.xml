<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:beans="http://www.springframework.org/schema/beans"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-3.0.xsd"
       default-autowire="byName">
    <tx:annotation-driven/>

    <import resource="classpath:flagship-db.xml"/>

    <bean id="transactionManagerAllflagship" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
        <property name="dataSource" ref="totalDataSource"/>
    </bean>

    <bean id="sqlSessionFactoryAllFlagship" class="org.mybatis.spring.SqlSessionFactoryBean">
        <property name="dataSource" ref="totalDataSource"/>
        <property name="configLocation" value="classpath:mybatis-config.xml"/>
        <property name="mapperLocations" value="classpath:mappers/test/test.xml"/>
    </bean>

    <bean name="mapperScannerConfigurerAllFlagship" class="org.mybatis.spring.mapper.MapperScannerConfigurer">
        <property name="basePackage" value="com.qunar.ops.dao" />
        <property name="sqlSessionFactoryBeanName" value="sqlSessionFactoryAllFlagship" />
    </bean>


</beans>
